<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Add Better Checkout -->
        <referenceContainer name="bluefinch.checkout.container">
            <block name="bluefinch.checkout.adyen" template="Bluefinch_CheckoutAdyen::adyen.phtml"
                   ifconfig="payment/adyen_abstract/Bluefinch_CheckoutAdyen"
                   after="-">
                <arguments>
                    <argument name="asset_view_model" xsi:type="object">Bluefinch\CheckoutAdyen\ViewModel\Assets</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
